<!-- Sidebar has been removed. Use the top navbar instead. -->

<style>
    :root {
        --ig-sidebar-width: 250px;
        --ig-sidebar-bg: #ffffff;
        --ig-sidebar-border: #e6e6e6;
        --ig-item-hover: #f5f5f5;
        --ig-text: #262626;
        --ig-muted: #8e8e8e;
        --ig-primary: #000000;
    }

    /* Push page content when sidebar is present */
    #page-wrapper {
        margin-left: var(--ig-sidebar-width);
        transition: margin-left .2s ease;
    }

    .ig-sidebar {
        position: fixed;
        top: 0;
        left: 0;
        height: 100vh;
        width: var(--ig-sidebar-width);
        background: var(--ig-sidebar-bg);
        border-right: 1px solid var(--ig-sidebar-border);
        display: flex;
        flex-direction: column;
        padding: 12px;
        z-index: 1030;
    }

    .ig-brand {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 12px 8px 16px 8px;
        margin-bottom: 8px;
    }

    .ig-brand img {
        height: 80px;
        width: auto;
        margin-bottom: 8px;
    }

    .ig-brand .company-name {
        font-size: 16px;
        font-weight: 700;
        color: var(--ig-text);
        text-align: center;
        line-height: 1.2;
    }

    .ig-nav {
        display: flex;
        flex-direction: column;
        gap: 4px;
        flex: 1 1 auto;
        overflow-y: auto;
    }

    .ig-item {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 10px 12px;
        border-radius: 8px;
        color: var(--ig-text);
        text-decoration: none;
        transition: background .15s ease;
        font-weight: 500;
    }

    .ig-item:hover {
        background: var(--ig-item-hover);
        text-decoration: none;
        color: var(--ig-text);
    }

    .ig-item i {
        font-size: 18px;
        width: 22px;
        text-align: center;
        color: var(--ig-primary);
    }

    .ig-bottom {
        margin-top: auto;
        border-top: 1px solid var(--ig-sidebar-border);
        padding-top: 8px;
    }

    .ig-muted {
        color: var(--ig-muted);
        font-size: 12px;
        padding: 6px 12px;
    }

    @@media (max-width: 991.98px) {
        :root { --ig-sidebar-width: 220px; }
        
        .ig-brand .company-name {
            font-size: 14px;
        }
    }

    @@media (max-width: 768px) {
        .ig-brand .company-name {
            font-size: 12px;
        }
    }
</style>

