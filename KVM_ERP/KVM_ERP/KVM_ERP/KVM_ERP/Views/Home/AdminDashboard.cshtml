@{
    ViewBag.Title = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="card" style="border-radius: 10px; box-shadow: 0 2px 8px rgba(0,0,0,.06);">
        <div class="card-body">
            <h2 class="mb-2">Admin Dashboard</h2>
            <p class="text-muted mb-4">Welcome. Use the navbar to access Masters, Groups, and Users. All other modules have been removed.</p>
            <div class="row g-3">
                <div class="col-md-4">
                    <div class="p-3 border rounded bg-light">
                        <div class="fw-bold">Masters</div>
                        <div class="text-muted">Configure master data</div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="p-3 border rounded bg-light">
                        <div class="fw-bold">Groups</div>
                        <div class="text-muted">Manage user groups</div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="p-3 border rounded bg-light">
                        <div class="fw-bold">Users</div>
                        <div class="text-muted">Manage users and roles</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
